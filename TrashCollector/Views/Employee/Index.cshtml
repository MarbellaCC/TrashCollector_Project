@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Enjoy your Day!</h1>
<p>
    <a asp-action="Create">Create Account</a>
    <a asp-action="Delete">Delete Account</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickupDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExtraPickupDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspensionStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspensionEndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StreetAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.City)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.State)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ZipCode)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PickupDay)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ExtraPickupDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SuspensionStartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SuspensionEndDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IdentityUser.Id)
    </td>
</tr>}
    </tbody>
</table>
